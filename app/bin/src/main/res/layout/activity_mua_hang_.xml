<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_muahang"
        android:background="#FF7A22"
        app:title="@string/thanhtoan"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Edit_tenkh_muahang"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:hint="@string/hotennhan"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="textPersonName"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Edit_diaChi_muahang"
            android:drawableLeft="@drawable/map"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:hint="@string/diachi"
            android:inputType="textMultiLine"
            android:importantForAutofill="no" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/sdt"
            android:drawableLeft="@drawable/dt"
            android:drawablePadding="10dp"
            android:inputType="phone"
            android:id="@+id/Edit_sdt_muahang"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:maxLength="10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="10dp"
            android:padding="10dp">
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/gia"
                android:textColor="#000"
                android:textSize="25sp"
                android:layout_width="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/txt_gia_tien_mua_hang"
                android:text="@string/gia"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:textSize="25sp"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mua_sp"
            android:text="@string/xacnhan"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>