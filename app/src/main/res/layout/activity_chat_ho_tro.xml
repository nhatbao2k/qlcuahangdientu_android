<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.ChatHoTro"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_chat_ho_tro"
        android:background="#FF7A22"
        app:title="@string/traodoi"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_chat_ho_tro"
        android:layout_above="@+id/chat_htro"
        android:id="@+id/lv_chat_ho_tro"
        android:stackFromBottom="true"/>
    <LinearLayout
        android:id="@+id/chat_htro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="5">
        <ImageView
            android:layout_weight="0.5"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_img"
            android:id="@+id/img_anh_lienhe"
            android:scaleType="fitCenter"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/Edit_chat_lien_he"
            android:inputType="textLongMessage"
            android:imeOptions="actionDone"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/send"
            android:scaleType="centerInside"
            android:id="@+id/img_gui_tin_nhan_lien_he"/>
    </LinearLayout>
</RelativeLayout>